<% if @guest_reviews.count == 0 %>
  <div class='text-center'>
    <h4>There are no reviews.</h4>
  </div>
<% else %>
  <% @guest_reviews.each do |review| %>
    <div class='row'>
      <div class='col-md-3 text-center'>
        <%= image_tag avatar_url(review.guest), class: "img-circle avatar-medium" %><br>
        <strong><%= review.guest.name %></strong>
      </div>
      <div class='col-md-9'>
        <%= review.star %>
        <% if current_user && current_user.id == review.guest.id %>
          <span class='pull-right'>
            <%= link_to review, method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </span>
        <% end %>
      </div>
      <div><%= review.created_at.strftime("%v") %></div>
      <div><%= review.comment %></div>
    </div>
  <% end %>
<% end %>