<div class='row'>
  <div class='col-md-3'>
    <div class='center'>
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
    </div>
    <div class='panel panel-default'>
      <div class='panel-heading'>Verification</div>
      <div class='panel-body'>
        Email Adress <br>
        Phone Number
      </div>
    </div>
  </div>
  <div class='col-md-9'>
    <h2> <%= @user.name %> </h2>
    <div class='description row-space-3'> <%= @user.description %> </div>

    <h4>Listings <%= @user.rooms.length %> </h4>

    <div class='row'>
      <% @rooms.each do |room| %>
        <div class='col-md-4'>
          <div class='preview'>
            <%= image_tag room.cover_photo(:thumb) %>
          </div>
          <div class='panel-body'>
            <%= link_to room.listing_name, room %>
          </div>
        </div>
      <% end %>
    </div>
    <br>

    <h4>Reviews From Guests (<%= @guest_reviews.count %>)</h4>
    <%= render "reviews/guest_list" %>


    <h4>Reviews From Hosts (<%= @host_reviews.count %>)</h4>
    <%= render "reviews/host_list" %>
  </div>
</div>