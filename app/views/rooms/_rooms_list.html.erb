<div class='card-deck'>
  <% rooms.each do |room| %>
        <div class="card">
          <%= image_tag room.cover_photo(:thumb) %>
          <div class="card-body">
            <div class='card-title'>
              <%= link_to room.listing_name, room %>
            </div>
            <div class='card-text'>
              $<%= room.price %> - <%= room.home_type %> - <%= plural_form(room.bed_room, "bed") %>
            </div>
            <div id="star_<%= room.id %>"></div>
            <div><%= plural_form(room.guest_reviews.count, "Review") %></div>

          </div>
        </div>

      <script>
        $('#star_<%= room.id %>').raty({
          path: '/assets',
          readOnly: true,
          score: <%= room.average_rating %>
        });
      </script>
  <% end %>

</div>