<% rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel">
        <div class="panel-heading preview">
          <%= image_tag room.cover_photo(:thumb) %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name, room %><br/>
          $<%= room.price %> - <%= room.home_type %> - <%= plural_form(room.bed_room, "bed") %>
          <div id="star_<%= room.id %>"></div>
          <div><%= plural_form(room.guest_reviews.count, "Review") %></div>

        </div>
      </div>
    </div>

    <script>
      $('#star_<%= room.id %>').raty({
        path: '/assets',
        readOnly: true,
        score: <%= room.average_rating %>
      });
    </script>
<% end %>
