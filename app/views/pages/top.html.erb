<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">Airbnb</span>Book unique homes and experience a city like a logo.</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datepicker" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control datepicker" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-4 col-md-4 text-center">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br><hr><br>

<div><h3>Homes</h3></div>
<br>

<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="preview">
          <%= image_tag room.cover_photo(:thumb) %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name, room %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div><h3>Cities</h3></div>
<br>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=✓&search=los+angels">
      <div class="discovery-card la"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=✓&search=london">
      <div class="discovery-card ld"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=✓&search=paris">
      <div class="discovery-card pr"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=✓&search=miami">
      <div class="discovery-card mi"></div>
    </a>
  </div>
</div>

<script>
  $("#start_date").datepicker({
    dateFormat: "dd-mm-yy",
    minDate: 0,
    maxDate: "3m",
    onSelect: function(selected) {
      $("#end_date").datepicker("option", "minDate", selected);
      $("#end_date").attr("disabled", false);
    }
  });
  $("#end_date").datepicker({
    dateFormat: "dd-mm-yy",
    minDate: 0,
    maxDate: "3m",
    onSelect: function(selected) {
      $("#start_date").datepicker("option", "maxDate", selected);
    }
  });
</script>